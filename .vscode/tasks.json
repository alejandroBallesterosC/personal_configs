{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile & Run Current File",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/scripts/run_file.sh",
            "args": ["${file}"],
            "options": {
                "env": {
                    "WORKSPACE_FOLDER": "${workspaceFolder}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },

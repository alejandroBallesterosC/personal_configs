{
  "description": "TDD workflow automatic test feedback - runs tests after code changes",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/run-tests.sh"
          }
        ]
      }
    ]
  }
}
